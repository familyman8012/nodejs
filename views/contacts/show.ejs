<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body>
    <%- include('../partials/nav') %>
    <div class="contact contact-show">
        <h2>show</h2>
        <div>
            <h3><%= contact.name %></h3>
            <label>Email</label><span><%= contact.email %></span>
            <br />
            <label>Phone</label><span><%= contact.phone %></span>
        </div>
        <div class="contact-menu">
            <a href="/contacts/<%= contact._id %>/edit">Edit</a>
            <form action="/contacts/<%= contact._id %>?method_=delete" method="post">
                <a href="#" onclick="confirm('지우시겠습니까?')?this.parentElement.submit():null;">DELETE</a>
            </form>
        </div>
    </div>
</body>
</html>